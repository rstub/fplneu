# copy and scale C, P and R
Open("uplb8a.pfb")
SelectSingletons("C", "P", "R")
Copy()

Open("bold-crp.sfd")

SelectSingletons("C", "P", "R")
Paste()
Scale(59)
RoundToInt()
AutoHint()

# cut&paste to right position
Select("C")
Cut()
Select("copyright")
Paste()
Move(-20,0)

Select("R")
Cut()
Select("registered")
Paste()

Select("P")
Cut()
Select(0x2117)
Paste()
Move(60,0)

Select("circle")
CopyReference()
Select("copyright")
SelectMore("registered")
SelectMore(0x2117)
PasteInto()
SetWidth(747)

Save("bold-crp.sfd")
